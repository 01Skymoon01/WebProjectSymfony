
{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}


{% endblock %}
{% block container %}
    {% set flashbag_notices = app.session.flashbag.get('notice') %}
    {% if flashbag_notices is not empty %}
    <ul class="msg">
    {% for notice in flashbag_notices %}
    <li>{{ notice }}</li>
    {% endfor %}
    </ul>
    {% endif %}

    <center>



        <!-- Single pro tab start-->
        <div class="single-product-tab-area mg-b-30" style="margin-left: 15%">
            <!-- Single pro tab review Start-->
            <div class="single-pro-review-area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="review-tab-pro-inner">
                                <ul id="myTab3" class="tab-review-design">
                                    <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i> Contactez le responsable de levent </a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <center>
                                                <div class="review-content-section">

                                                    {{ form_start(f)  }}


                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class=" fa fa-envelope-o" aria-hidden="true"></i></span>

                                                        {{ form_widget(f.subject, { 'attr': {'class': 'form-control', 'placeholder':'Your E-Mail here'}}) }}
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i  class="fa fa-id-badge" aria-hidden="true"></i></span>

                                                        {{ form_widget(f.mail, { 'attr': {'class': 'form-control', 'placeholder':'Your E-Mail here', 'value': event.emailresponsable }}) }}

                                                    </div>




                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class=" fa fa-address-card" aria-hidden="true"></i></span>

                                                        {{ form_widget(f.objet, { 'attr': {'class': 'form-control', 'placeholder':'Your subject here'}}) }}
                                                    </div>
                                                </center>




                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center custom-pro-edt-ds">

                                                    {{ form_widget(f.envoyer, { 'attr': {'class': 'btn btn-ctl-bt waves-effect waves-light m-r-10'} }) }}

                                                </div>
                                            </div>
                                        </div>

                                        {{ form_end(f) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </center>
{% endblock %}



