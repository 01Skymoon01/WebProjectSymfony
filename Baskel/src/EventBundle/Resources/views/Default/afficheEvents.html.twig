{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}


{% endblock %}
{% block container %}

    <link rel="stylesheet" href="{{asset('back/css/jquery.dataTables.min.css')}}">
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(function() {
            $('#ajax-table').DataTable({
                "language": {

                    "zeroRecords": "Aucun enregistrement a été trouvé !",

                    "infoEmpty": "Aucun enregistrement",
                    "infoFiltered": "(filtré de  MAX total enregistement)",
                    "search": "Recherche:",
                    "paginate": {
                        "previous": "Precédent",
                        "next" : "suivant"
                    }
                }

            });
        });
    </script>


    <div class="breadcome-area" style="margin-left:14%"

    <div class="product-status mg-b-30" style="margin-left: 14%">
        <!--*************************this is la diva ************************************** -->
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" style=" margin-bottom: 2%" >

            <div class="admin-content analysis-progrebar-ctn res-mg-t-30" style="background-color:#1b2a47;color:#24ffdb;">
                <div class="stats-icon pull-right">
                    <i class="fa fa-star" aria-hidden="true"></i>
                </div>
                <h4 class="text-left text-uppercase" style="color:#24ffdb; "><b>TOP EVENT:</b></h4>
                <div class="row vertical-center-box vertical-center-box-tablet">
                    <div class="col-xs-9 cus-gh-hd-pro">
                        <h2 class="text-right no-margin" style="color:#24ffdb;font-size:20px; ">
                            {% for t in topEvent %}
                                <h1>{{ t.nom }}</h1>

                            {% endfor %}
                            <span style="color: #91ffed">Top NB Participants</span></h2>
                    </div>
                </div>
                <div class="progress progress-mini">
                    <div style="width: 100%;" class="progress-bar progress-bar-info "></div>
                </div>
            </div>
        </div>
        <!--*************************this is la diva ************************************** -->
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" style=" margin-bottom: 2%" >

            <div class="admin-content analysis-progrebar-ctn res-mg-t-30" style="background-color:#1b2a47;color:#e761ff;">
                <div class="stats-icon pull-right">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                </div>
                <h4 class="text-left text-uppercase" style="color:#e761ff; "><b>WORST EVENT:</b></h4>
                <div class="row vertical-center-box vertical-center-box-tablet">
                    <div class="col-xs-9 cus-gh-hd-pro">
                        <h2 class="text-right no-margin" style="color:#e761ff;font-size:20px; ">
                            {% for w in worstEvent %}
                                <h1>{{ w.nom }}</h1>

                            {% endfor %}
                            <span style="color: #91ffed">Lowest NB Participants</span></h2>
                    </div>
                </div>
                <div class="progress progress-mini">
                    <div style="width: 100%;" class="progress-bar progress-bar-info "></div>
                </div>
            </div>
        </div>
        <!--*************************this is la diva ************************************** -->
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" style=" margin-bottom: 2%" >

            <div class="admin-content analysis-progrebar-ctn res-mg-t-30" style="background-color:#1b2a47;color:#91ffed;">
                <div class="stats-icon pull-right">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </div>
                <h4 class="text-left text-uppercase" style="color:#91ffed; "><b>Closest EVENT:</b></h4>
                <div class="row vertical-center-box vertical-center-box-tablet">
                    <div class="col-xs-9 cus-gh-hd-pro">
                        <h2 class="text-right no-margin" style="color:#24ffdb;font-size:20px; ">
                            {% for w in closestEvent %}
                            <h1>{{ w.nom }}</h1>


                            <span style="color: #24ffdb">{{w.date | date('yy/m/d')}}</span></h2>
                        {% endfor %}
                    </div>
                </div>
                <div class="progress progress-mini">
                    <div style="width: 100%;" class="progress-bar progress-bar-info "></div>
                </div>
            </div>
        </div>
        <!--*************************this is la diva ************************************** -->
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list">



                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="icon nalika-home"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Liste des Evennements</h2>
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-report">
                                    <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <div class="container-fluid">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success ">
                    {{ message }}
                </div>
            {% endfor %}


            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <div class="row breadcome-heading">
                            <div class="col-lg-10">
                                <h4>Liste des Events</h4>
                            </div>
                            <div class="col-lg-2">

                            </div>


                        </div>
                        </span>

                        <table id="ajax-table">
                            <thead>

                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Description</th>
                                <th scope="col">EmailResponsable</th>
                                <th scope="col">Date</th>
                                <th scope="col">Nombre de participants</th>
                                <th scope="col">Why Attend?</th>
                                <th scope="col">Image</th>
                                <th scope="col-4">&nbsp;</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;Contactez le responsable</th>
                                <th>&nbsp;Share</th>
                                <th>&nbsp;Share</th>


                            </tr>
                            </thead>


                            <tbody id="myTable">

                            {% for e in events %}
                                {% if e.nbParticipants >= 50  %}
                                    <tr  style="background-color: #107a94" >
                                {% elseif (e.nbParticipants >= 25)  and (e.nbParticipants <= 50) %}
                                    <tr style="background-color: #AE3FFF">
                                {% elseif (e.nbParticipants <=25)  and (e.nbParticipants >=0) %}
                                    <tr  style="background-color: #A40086" >
                                {% else %}
                                    <tr >
                                {% endif %}


                                <td>{{ e.nom }}</td>
                                <td>{{ e.description }}</td>
                                <td>{{ e.emailResponsable }}</td>
                                <td>{{e.date |date("F/d/Y h:i")}}</td>
                                <td>{{ e.nbParticipants }}</td>
                                <td>{{ e.whyattend }}</td>
                                <td>  <a href="#"><img src="{{ asset('uploads/images/' ~ e.image) }}" width="300" height="300" class="img-fluid"></td>

                                <td>
                                    <center>
                                        <a data-toggle="tooltip" class="pd-setting-ed deleteBtn"   data-id="{{ e.id }}" style="color:white" > <i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </center>
                                </td>


                                <td>

                                    <center>
                                        <a data-toggle="tooltip" class="pd-setting-ed" href="{{ path('ModifierEv', {'id': e.id}) }}" style="color:white"> <i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a data-toggle="tooltip" class="pd-setting-ed" href="{{ path('MailResp', {'id': e.id}) }}" style="color:white"> <i class="fa fa-envelope" aria-hidden="true"></i></a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <iframe src="https://www.facebook.com/plugins/share_button.php?href=http%3A%2F%2Flocalhost.dev%2F2a7_php5%2Fview%2Fafficher_wishlist.php&layout=button_count&size=small&width=83&height=20&appId" width="83" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
                                    </center>
                                </td>

                                <td>
                                    <center>
                                        <a style="color:white" href="https://twitter.com/share?ref_src=https://www.your-domain.com/your-page.html" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                                    </center>
                                </td>


                                </tr>
                            {% endfor %}
                            </tbody>


                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <script>
        $(document).ready(function(){
            var myLink = "{{ app.request.requestUri }}";
            var ajaxTableLink = myLink +" #ajax-table ";

            $('.deleteBtn').click(function (e) {
                e.preventDefault();
                id = $(this).data('id');
                $.ajax({
                    url: "SupprimerEv/"+id,
                    method: 'get',
                    success: function (data, response) {

                        $('#ajax-table').load(ajaxTableLink)

                    },
                    error: function () {
                        //appear pop to say error blabla
                    },
                });

            });
        });
    </script>


{% endblock %}




