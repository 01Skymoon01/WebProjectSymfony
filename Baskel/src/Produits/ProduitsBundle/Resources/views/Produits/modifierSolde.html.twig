
{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}

    <style>
        #div-add-product{
            margin-left: 18%;
            margin-top: 5%;
            width: 80%;
        }
    </style>



    <script>
        function validate() {

            var remise = document.getElementById("remise").value;
            var error_message = document.getElementById("error_message");

            if( remise < 0 ){

                error_message.style.display='block';
                //    alert("dddddddd");

                text = "<i class=\"fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro\"></i> La remise ne peut pas être négative.";
                error_message.innerHTML = text;

                return false;

            } else if( remise > 100 ){

                error_message.style.display='block';
                text = "<i class=\"fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro\"></i> La remise ne peut pas dépasser 100%.";
                error_message.innerHTML = text;

                return false;
            }

            else {
                error_message.style.display='none';
                return true;
            }

        }
    </script>

{% endblock %}
{% block container %}

    {{ form_start(form,{'attr': {'onsubmit':'return validate();','novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}



    <div class="single-product-tab-area mg-b-30" >
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area" >

            <div class="container-fluid" >

                <div class="row" >
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <div class="review-tab-pro-inner" id="div-add-product">

                            <div id="myTabContent" class="tab-content custom-product-edit" >
                                <div class="product-tab-list tab-pane fade active in" id="description">




                                    <div class="row">

                                        <div class="alert alert-danger alert-mg-b" id="error_message" hidden="hidden"></div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="margin-left: 300px;"  >

                                            <div class="review-content-section" >


                                                <div class="input-group mg-b-pro-edt"  >

                                                    <span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
                                                    {{ form_widget(form.solde, { 'id': 'remise','attr': {'class': 'form-control','placeholder':'Valeur remise'} }) }}
                                                </div>
                                                <div class="alert alert-danger alert-mg-b" id="error_message" hidden="hidden"></div>

                                            </div>
                                        </div>


                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">

                                                {{ form_widget(form.Affecter, { 'attr': {'class': 'btn btn-ctl-bt waves-effect waves-light m-r-10' ,'placeholder': "Libellé"} }) }}
                                                <a type="button" class="btn btn-ctl-bt waves-effect waves-light" href="{{ path('afficherProduitsBack') }}">Annuler
                                                </a>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    {{ form_end(form) }}



{% endblock %}





