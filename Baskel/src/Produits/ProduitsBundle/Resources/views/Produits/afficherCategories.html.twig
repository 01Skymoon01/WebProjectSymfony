
{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}
    <style>
        #div-cat-list{
            margin-left: 18%;
            margin-top: 5%;
            width: 77%;
        }
        #delete-cat ,#edit-cat{
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 3px;
            border: 1px solid rgba(0,0,0,.12);
            background: #152036;
            display: inline-block;
            margin-right: 5px;
            color: whitesmoke;
        }
        #add-cat-link {
            background: #fd4339;
            border-color: #fd4339;
        }
    </style>
{% endblock %}

{% block container %}





<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap" id="div-cat-list">
                    <h4>Liste Des Catégories</h4>
                    {% for msg in app.flashes('error') %}
                    <div class="alert alert-danger alert-mg-b" role="alert">
                       <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ msg }}
                    </div>
                    {% endfor %}
                    <div class="add-product">
                        <a href="{{ path('ajouterCategorie') }}" id="add-cat-link">+ Une Catégorie</a>
                    </div>
                    <table >
                        <tr style="background-color: #101829">

                            <th>Référence</th>

                            <th>Libellé</th>

                            <th style="width: 13%"></th>
                        </tr>


                        {% for c in categorie %}
                            <tr>
                                <td>{{ c.refC }}</td>
                                <td>{{ c.libelle }}</td>
                                <td>
                                    <a data-toggle="tooltip" title="Edit" class="pd-setting-ed" id="edit-cat" href="{{ path('modifierCategorie', { 'ref_c': c.refC }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a data-toggle="tooltip" title="Trash" class="pd-setting-ed" id="delete-cat" href="{{ path('supprimerCategorie', { 'ref_c': c.refC }) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </td>

                            </tr>
                        {% endfor %}

                    </table>


                    <div class="custom-pagination">
                        {# display navigation #}
                        <div class="navigation">
                            {{ knp_pagination_render(categorie) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

