
{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}
    <style>
        #div-add-product{
            margin-left: 18%;
            margin-top: 5%;
            width: 80%;
        }

    </style>

    <script>
        function showError() {
           // alert("referr");
            var error_message = document.getElementById("error_message");
           // var errorRef = document.getElementById("referr");

            error_message.style.display='block';
        }

    </script>

{% endblock %}

{% block container %}

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    <div class="single-product-tab-area mg-b-30" >
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area" >

            <div class="container-fluid" >

                <div class="row" >
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <div class="review-tab-pro-inner" id="div-add-product">

                            <div id="myTabContent" class="tab-content custom-product-edit" >
                                <div class="product-tab-list tab-pane fade active in" id="description">




                                    <div class="row">

                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" >
                                            <div class="review-content-section">

                                                <div class="input-group mg-b-pro-edt" >
                                                    <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>

                                                    {{ form_widget(form.ref_p, { 'attr': {'class': 'form-control' ,'placeholder': "Référence"} }) }}

                                                </div>
                                                {% if (form_errors(form.ref_p)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.ref_p) }}
                                                    </div>
                                                {% endif %}



                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="icon nalika-favorites" aria-hidden="true"></i></span>
                                                    {{ form_widget(form.nomP, { 'attr': {'class': 'form-control' ,'placeholder': "Nom Produit"} }) }}
                                                </div>
                                                {% if (form_errors(form.nomP)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.nomP) }}
                                                    </div>
                                                {% endif %}

                                                <div class="input-group mg-b-pro-edt" >
                                                    <span class="input-group-addon"><i class="fa fa-transgender" aria-hidden="true"></i></span>

                                                    {{ form_widget(form.genreP, { 'attr': {'class': 'form-control' ,'placeholder': "Genre"} }) }}
                                                </div>
                                                {% if (form_errors(form.genreP)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.genreP) }}
                                                    </div>
                                                {% endif %}


                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="icon nalika-like" aria-hidden="true"></i></span>
                                                    {{ form_widget(form.couleurP,{'attr': {'class':'form-control'}}) }}
                                                </div>


                                                <div class="input-group mg-b-pro-edt" >
                                                    <span class="input-group-addon"><i class="fa fa-archive" aria-hidden="true"></i></span>

                                                    {{ form_widget(form.quantiteP, { 'attr': {'class': 'form-control' ,'placeholder': "Quantité"} }) }}
                                                </div>
                                                {% if (form_errors(form.quantiteP)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.quantiteP) }}
                                                    </div>
                                                {% endif %}

                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" >
                                            <div class="review-content-section">

                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
                                                    {{ form_widget(form.prixP, { 'attr': {'class': 'form-control' ,'placeholder': "Prix"} }) }}
                                                </div>
                                                {% if (form_errors(form.prixP)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.prixP) }}
                                                    </div>
                                                {% endif %}

                                                <div class="input-group mg-b-pro-edt" >
                                                    <span class="input-group-addon"><i class="fa fa-diamond" aria-hidden="true"></i></span>

                                                    {{ form_widget(form.marqueP, { 'attr': {'class': 'form-control' ,'placeholder': "Marque"} }) }}
                                                </div>
                                                {% if (form_errors(form.marqueP)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.marqueP) }}
                                                    </div>
                                                {% endif %}

                                                <div class="input-group mg-b-pro-edt" >
                                                    <span class="input-group-addon"><i class="fa fa-file-text-o" aria-hidden="true"></i></span>

                                                    {{ form_widget(form.description, { 'attr': {'class': 'form-control' ,'placeholder': "Description"} }) }}
                                                </div>
                                                {% if (form_errors(form.description)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.description) }}
                                                    </div>
                                                {% endif %}






                                                <div class="input-group mg-b-pro-edt">

                                                                        {{ form_widget(form.image,{ 'attr': {'class': 'file-button' } }) }}

                                                </div>
                                                {% if (form_errors(form.image)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.image) }}
                                                    </div>
                                                {% endif %}


                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-th" aria-hidden="true"></i></span>
                                                    {{ form_widget(form.ref_c, {'attr': {'class':'form-control pro-edt-select form-control-primary'}}) }}
                                                </div>
                                                {% if (form_errors(form.ref_c)) %}
                                                    <div class="alert alert-danger alert-mg-b" role="alert">
                                                        <i class="fa fa-exclamation-triangle adminpro-warning-danger admin-check-pro"></i> {{ form_errors(form.ref_c) }}
                                                    </div>
                                                {% endif %}



                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center custom-pro-edt-ds">

                                                {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-ctl-bt waves-effect waves-light m-r-10' ,'placeholder': "Libellé"} }) }}
                                                <a type="button" class="btn btn-ctl-bt waves-effect waves-light" href="{{ path('baskel_homepage') }}">Annuler
                                                </a>
                                            </div>
                                        </div>
                                    </div>








</div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}




