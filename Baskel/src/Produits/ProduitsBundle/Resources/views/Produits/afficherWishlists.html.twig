
{% extends 'default/front/header.html.twig' %}


{% block head %}

    {{ parent() }}



{% endblock %}




{% block container %}


    <section class="shop-checkout">
        <div class="container">
            <!--Start Breadcrumbs-->
            <ul class="tz-breadcrumbs">
                <li>
                    <a href="#">Home</a>
                </li>
                <li class="current">
                    Shop Cart
                </li>
            </ul>
            <!--End Breadcrumbs-->
            <h1 class="page-title">Votre Wishlist</h1>


            <!--Start form table-->
            <form>

                <table class="shop_table cart">
                    <!--Table header-->
                    <thead>
                    <tr>
                        <th class="product-remove"></th>
                        <th class="product-thumbnail">Produit</th>
                        <th class="product-name">&nbsp;</th>
                        <th class="product-price">Prix</th>
                        <th class="product-quantity">Quantit√©</th>

                    </tr>
                    </thead>
                    <!--End table header-->

                    <!--Table body-->
                    <tbody>

                    {% for wish in wishlist %}

                    <tr class="cart_item">
                        <td class="product-remove">
                            <a  href="{{ path('supprimerWishlist', { 'id': wish.id }) }}" class="remove fa-" title="Remove this item"></a>

                        </td>
                        <td class="product-thumbnail">
                            <a href="single-product.html"><img src="{{ asset('uploads/images/' ~ wish.imageProd) }}" alt="cart" /></a>
                        </td>

                        <td class="product-name">
                            <a href="single-product.html">{{ wish.nomProd }} </a>
                        </td>
                        <td class="product-price">
                            <span class="amount">{{ wish.prixProd }} DT</span>
                        </td>

                        <td class="product-quantity">
                            <div class="quantity"><input type="number" step="1" min="0" name="cart" value="{{ wish.qteProd }}" title="Qty" class="input-text qty text" size="4" disabled="disabled"></div>
                        </td>

                    </tr>
                    {% endfor %}
                    <tr>
                        <td class="actions" colspan="6">
                            <a class="back-shop" href="{{ path('shop') }}"><i class="fa fa-angle-left"></i> RETOUR AU MAGASIN.</a>
                            <button class="update-cart" type="submit">AJOUTER AU PANIER</button>
                        </td>
                    </tr>

                    </tbody>
                    <!--End table body-->
                </table>

            </form>
            <!--End form table-->


    </section>

{% endblock %}




