{% extends 'default/back/header.html.twig' %}



{% block head %}
    {{ parent() }}


{% endblock %}
{% block container %}

    <div class="breadcome-area" style="margin-left:14%"
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Liste des Evennements</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="product-status mg-b-30" style="margin-left: 14%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Liste des Events</h4>

                        <table>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Description</th>
                                <th scope="col">Responsable</th>
                                <th scope="col">Date</th>
                                <th scope="col">Nombre de participants</th>
                                <th scope="col">Why Attend?</th>
                                <th scope="col">Supprimer</th>
                                <th scope="col">Modifier</th>
                            </tr>
                            <tr>
                                {% for e in events %}
                            <tr>

                                <td>{{ e.nom }}</td>
                                <td>{{ e.description }}</td>
                                <td>{{ e.responsable }}</td>
                                <td>{{e.date |date("F/d/Y h:i")}}</td>
                                <td>{{ e.nbParticipants }}</td>
                                <td>{{ e.whyattend }}</td>
                                <td>

                                    <a data-toggle="tooltip" class="pd-setting-ed" href="{{ path('Supprimer', {'id': e.id}) }}"> <i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </td>
                                <td>


                                    <a data-toggle="tooltip" class="pd-setting-ed" href="{{ path('ModifierEv', {'id': e.id}) }}"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </td>

                            </tr>
                            {% endfor %}


                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}




