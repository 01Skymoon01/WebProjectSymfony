                                <td>{{ rd.dateDepotRDV|date('Y-m-d') }}</td>
                                <td>{{ rd.dateRDV|date('Y-m-d') }}</td>
                                <td>{{ rd.objetRDV }}</td>
                                <td>{{ rd.etatRDV }}</td>
                                <td>{{ rd.detailsRDV }}</td>
                                <td>{{ rd.userid}}</td>
                                {% if rd.technicienid != NULL %}
                                <td>{{ rd.technicienid.getNom()}} {{ rd.technicienid.getPrenom()}} </td>
                                    {% else %}
