{% extends 'default/back/header.html.twig' %}


{% block head %}
    {{ parent() }}


{% endblock %}
{% block container %}
    <div class="breadcome-area" style="margin-left:14%"
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Liste des Rendez-Vous</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="product-status mg-b-30" style="margin-left: 14%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Liste des Rendez-vous</h4>

                        <table>
                            <tr>
                                <th>ID</th>
                                <th>Date de depot</th>
                                <th>Date de Rdv</th>
                                <th>Objet</th>
                                <th>Etat</th>
                                <th>Details</th>
                                <th>User</th>
                                <th>Technicien</th>
                            </tr>
                            <tr>
                                {% for rd in rdv %}
                                {% if  rd.dateDepotRDV|date('Y-m-d') < "now"|date('Y-m-d')  %}
                                {% if rd.etatRDV == 'Accepte'  %}
                             <tr style="background-color: #107a94">
                                {% elseif rd.etatRDV == 'Refuse'%}
                            <tr style="background-color:#A40086 ">
                                {% else %}
                                <tr>
                                {% endif %}

                                <td>{{ rd.idRDV }}</td>
                                <td>{{ rd.dateDepotRDV|date('Y-m-d') }}</td>
                                <td>{{ rd.dateRDV|date('Y-m-d') }}</td>
                                <td>{{ rd.objetRDV }}</td>
                                <td>{{ rd.etatRDV }}</td>
                                <td>{{ rd.detailsRDV }}</td>
                                <td>{{ rd.userid}}</td>
                                {% if rd.technicienid != NULL %}
                                <td>{{ rd.technicienid.getNom()}} {{ rd.technicienid.getPrenom()}} </td>
                                    {% else %}
                                        <td>non affecter</td>
                                {% endif %}
                                <td><a  data-toggle="tooltip" title="Traiter" class="pd-setting-ed" href="{{ path('AcceptRDV', {'id': rd.idRDV}) }}"><i style="color: whitesmoke" class="fa fa-check" aria-hidden="true"></i> </i></a></td>
                                <td>     <a  data-toggle="tooltip" title="Traiter" class="pd-setting-ed" href="{{ path('RefusRDV', {'id': rd.idRDV}) }}"><i style="color: whitesmoke" class="fa fa-times" aria-hidden="true"></i> </i></a> </td>
                                   <td> <a data-toggle="tooltip" title="Technicien" class="pd-setting-ed" href="{{ path('AffecterTechnicien', {'id': rd.idRDV}) }}"><i style="color: whitesmoke" class="fa fa-user" aria-hidden="true"></i> </i></a> </td>
                                <td>  <a data-toggle="tooltip" title="Supprimer" class="pd-setting-ed" href="{{ path('SupprimerRDV', {'id': rd.idRDV}) }}"> <i style="color: whitesmoke" class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </td>
                                <td>  <a data-toggle="tooltip" title="Download" class="pd-setting-ed" href="{{ path('pdf', {'id': rd.idRDV}) }}"> <i style="color: whitesmoke" class="fa fa-download" aria-hidden="true"></i></a>
                                </td>
                                {% endif %}
                                {% endfor %}


                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
