{% extends 'default/back/header.html.twig' %}


{% block head %}
    {{ parent() }}


{% endblock %}
{% block container %}
    <div class="breadcome-area" style="margin-left:14%"
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="icon nalika-home"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Liste des Reclamations</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-report">
                                    <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    <div class="product-status mg-b-30" style="margin-left: 14%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Liste des Reclamations</h4>

                        <table>
                            <tr>
                                <th>ID</th>
                                <th>Date de Rec</th>
                                <th>Objet</th>
                                <th>Etat</th>
                                <th>Details</th>
                                <th>User</th>
                            </tr>

                                    {% for r in reclamations %}

                            {% if  r.dateR|date('Y-m-d') < "now"|date('Y-m-d')  %}

                            {% if r.etatR == 'traitee'  %}

                            <tr style="background-color: #A40086">
                                {% else %}
                            <tr>
                                {% endif %}
                                <td >{{ r.idR }}</td>
                                <td>{{ r.dateR|date('Y-m-d') }}</td>
                                <td>{{ r.objetR }}</td>
                                <td>{{ r.etatR }}</td>
                                <td>{{ r.detailsR }}</td>
                                <td>{{ r.userid}}</td>
                                <td>
                                    {% if r.etatR == 'non traitee' %}
                                 <a data-toggle="tooltip" title="Traiter" class="pd-setting-ed" href="{{ path('TraiterReclamation', {'id': r.idR}) }}"><i style="color: whitesmoke" class="fa fa-square-o" aria-hidden="true"></i> </i></a>

                                    {% else %}
                                   <a data-toggle="tooltip" title="Done" class="pd-setting-ed"><i style="color: whitesmoke" class="fa fa-check-square-o" aria-hidden="true"></i></a>
                                    {% endif %}

                                <td>   <a data-toggle="tooltip" title="Supprimer" class="pd-setting-ed" href="{{ path('SupprimerReclamation', {'id': r.idR}) }}"> <i style="color: whitesmoke" class="fa fa-trash-o" aria-hidden="true"></i></a>

                                </td>

                            {% endif %}
                                {% endfor %}

                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

 
{% endblock %}
