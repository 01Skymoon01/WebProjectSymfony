{% extends 'default/front/header.html.twig' %}

        {% block head %}
            {{ parent() }}


        {% endblock %}
        {% block container %}


<section class="shop-checkout">
    <div class="container">
        <!--Start Breadcrumbs-->
        <ul class="tz-breadcrumbs">
            <li>
                <a href="#">Acceuil</a>
            </li>
            <li class="current">
                Liste de vos rendez-vous
            </li>
        </ul>
        <!--End Breadcrumbs-->
        <h1 class="page-title">Liste de vos rendez-vous</h1>
        <p>NB: Toute modification ou suppression seras impossible apres minuit.</p>

        <!--Start form table-->
        <form>
            <table class="shop_table cart">
                <!--Table header-->
                <thead>
                <tr>

                    <th class="product-thumbnail">Date depot</th>
                    <th class="product-thumbnail">Date RDV</th>
                    <th class="product-price">Objet</th>
                    <th class="product-subtotal">Details</th>
                    <th class="product-quantity"> Etat</th>
                    <th class="product-subtotal">Technicien</th>
                    <th class="product-remove">&nbsp;</th>
                    <th class="product-remove">&nbsp;</th>
                </tr>
                </thead>
                <!--End table header-->

                <!--Table body-->
                <tbody>
                {% for rd in rdv %}

                    {% if rd.etatRDV == 'Accepte'  %}
                        <tr class="cart_item" style="background-color: hsl(43, 100%, 95%) " >
                    {% elseif rd.etatRDV == 'Refuse'%}
                        <tr class="cart_item" style="background-color:hsl(274, 100%, 95%)  ">
                    {% else %}
                        <tr class="cart_item">
                    {% endif %}



                        <td class="product-thumbnail">{{ rd.dateDepotRDV|date('Y-m-d') }}</td>
                        <td class="product-thumbnail">{{ rd.dateRDV|date('Y-m-d') }}</td>
                        <td class="product-name">{{ rd.objetRDV }}</td>
                    <td class="product-name"><span class="amount">{{ rd.detailsRDV }}</span></td>
                        <td class="product-price"><span class="amount">{{ rd.etatRDV }}</span></td>
                        {% if rd.technicienid != NULL %}
                            <td class="product-subtotal"><span class="amount">{{ rd.technicienid.getNom()}} {{ rd.technicienid.getPrenom()}} </span> </td>
                        {% else %}
                            <td class="product-price"><span class="amount">non affecter </span> </td>
                        {% endif %}

                        {% if  rd.dateDepotRDV|date('Y-m-d') == "now"|date('Y-m-d')  %}
                        <td class="product-remove">
                            <a  title="Modifier" href="{{ path('ModifierRDV', {'id': rd.idRdv}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </td>
                        <td class="product-remove">
                            <a data-toggle="tooltip"  href="{{ path('DeleteRDV', {'id': rd.idRDV}) }}"> <i class="fa fa-trash-o" aria-hidden="true"></i></a>

                        </td>
                            {% else %}
                            <td class="product-remove" >
                                <i style="color: #f44336" class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </td>
                            <td class="product-remove" >
                                <i style="color: #F44336" class="fa fa-trash-o" aria-hidden="true"></i>
                            </td>
                        {% endif %}
                    </tr>

                {% endfor %}
                <tr>
                    <td class="actions" colspan="6">
                        <a class="back-shop" href="#"><i class="fa fa-angle-left"></i> BACK TO SHOP</a>
                    </td>
                </tr>


                </tbody>
                <!--End table body-->
            </table>
        </form>
        <!--End form table-->
        {% endblock %}

