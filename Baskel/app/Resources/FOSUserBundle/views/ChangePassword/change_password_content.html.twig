{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form _self %}

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="{{ 'fos_user_profile_edit' }}"><i class="icon nalika-edit" aria-hidden="true"></i> Modifier Profile</a></li>

                            <li class="active"><a href="{{ path('fos_user_change_password') }}"><i class="icon nalika-unlocked" aria-hidden="true"></i> Modifier Mot de Passe </a></li>

                        </ul>

                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-unlocked" aria-hidden="true"></i></span>
                                                {{ form_errors(form.current_password ) }}


{{ form_widget(form.current_password ,{ 'attr': {'class': 'form-control','placeholder':'Mot de passe actuel'} }) }}
                                            </div>






                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">

                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-unlocked" aria-hidden="true"></i></span>
                                                {{ form_errors(form.plainPassword.first ) }}

                                                {{ form_widget(form.plainPassword.first ,{ 'attr': {'class': 'form-control','placeholder':'Nouveau mot de passe'} }) }}
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-unlocked"  aria-hidden="true"></i></span>
                                                {{ form_errors(form.plainPassword.second ) }}

                                                {{ form_widget(form.plainPassword.second ,{ 'attr': {'class': 'form-control','placeholder':'Répéter le nouveau mot de passe'} }) }}
                                            </div>



                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="text-center custom-pro-edt-ds">
                                                        <input type="submit" class="btn btn-ctl-bt waves-effect waves-light m-r-10"value="{{ 'change_password.submit'|trans }}" />
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












