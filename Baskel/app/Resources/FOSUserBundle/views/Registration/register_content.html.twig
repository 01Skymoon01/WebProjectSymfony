{% trans_default_domain 'FOSUserBundle' %}
<section class="default-page">
    <div class="container">
        <div class="tz-register">
            <h2>Inscription Livreur</h2>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <p class="form-row form-row-wide">
                <label >Email *</label>

                {{ form_widget(form.email, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.email) }}

            </p>
            <p class="form-row form-row-wide">
                <label> Pseudo *</label>

                {{ form_widget(form.username, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.username) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Nom *</label>

                {{ form_widget(form.nom, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.nom) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Prenom *</label>

                {{ form_widget(form.prenom, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.prenom) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Mot de passe *</label>

                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.plainPassword.first) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Confirmer mot de passe *</label>

                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.plainPassword.second) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Date de naissance *</label>

                {{ form_widget(form.dateNaiss, { 'attr': {'class': 'input-group-sm'} }) }}
                {{ form_errors(form.dateNaiss) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Numéro téléphone 1 *</label>

                {{ form_widget(form.numtel1, { 'attr': {'class': 'input-text'} }) }}
                {{ form_errors(form.numtel1) }}

            </p>
            <p class="form-row form-row-wide">
                <label >Numéro téléphone 2 </label>

                {{ form_widget(form.numtel2, { 'attr': {'class': 'input-text'} }) }}
            </p>

            <div>
                <p class="form-row">
                    <input  class="button" type="submit" value="{{ 'registration.submit'|trans }}" />
                </p>
</div>
{{ form_end(form) }}
        </div>
    </div>
</section>