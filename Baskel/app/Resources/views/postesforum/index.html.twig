{% extends 'default/front/header.html.twig' %}

{% block head %}
    {{ parent() }}


{% endblock %}

{% block container %}
    <div class="container" style="margin-top: 30px;margin-bottom: 30px;">
    <h1 class="text-center" style="margin-bottom: 50px">Postes-Forums</h1>


    <table class="table-hover table" style=" border-collapse: separate;
  border-spacing: 40px 0;">
        <thead class="tab-head" style="background-color: lightblue;">
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Titre</th>
                <th>Crée le</th>
                <th>Data</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postesForum in postesForums %}
            <tr>
                <td><a href="{{ path('postesforum_show', { 'id': postesForum.id }) }}">{{ postesForum.id }}</a></td>
                <td>{{ postesForum.categorie }}</td>
                <td>{{ postesForum.titre }}</td>
                <td>{% if postesForum.date %}{{ postesForum.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ postesForum.data }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('postesforum_show', { 'id': postesForum.id }) }}" class="btn-default btn mt-b-30"><i class="fa fa-eye"> Consulter</i>  </a>
                        </li>
                        <li>
                            <a href="{{ path('postesforum_edit', { 'id': postesForum.id }) }}" class="btn btn-default"><i class="fa fa-edit"> Modifier</i></a>
                        </li>
                        <li>
                            <a href="{{ path('forum_commenter', { 'id': postesForum.id }) }}" class="btn btn-default"><i class="fa fa-comment-o">  Commenter</i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('postesforum_new') }}" class="btn btn-primary btn"><i class="fa fa-plus-circle">  Crée un Poste</i></a>
        </li>
    </ul>
    </div>
{% endblock %}
